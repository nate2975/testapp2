<h1>Showing selected article</h1>

<table class="table table-hover">
  <thead>
    <tr>
        <caption><h3>Selected Article</h3></caption>
      <th>Article Title</th>
      <th>Article description</th>
      <th>images</th>
    </tr>
  </thead>
  <tbody>
    <tr>
        
      
       <td> <%= @article.title %></td>
        <td><%= @article.description %></td>
        <td><img src="<%= @article.img %>"></td
   
  </tbody>
</table>









<%= link_to "Edit this article", edit_article_path(@article), :class => "btn btn-primary" %> 
<%= link_to "Back to articles listing", articles_path, :class => "btn btn-primary" %>