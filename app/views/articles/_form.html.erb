

<%if @article.errors.any? %>
<h2>The following errors prevented the article from getting created</h2>
<ul>
<% @article.errors.full_messages.each do |msg| %>
<li><%= msg %></li>
<% end %>
</ul>
<% end %>
<%= form_for @article do |f| %>


   <form>
  <div class="form-group">
   <label for="formGroupExampleInput"><% f.label :title %></label>
  <%= f.text_field :title, class: "form-control", placeholder: "Title", autofocus: true %>
 </div>
 
  <div class="form-group">
   <label for="formGroupExampleInput2"><% f.label :description %></label>
  <%= f.text_area :description, class: "form-control", placeholder: "Description", autofocus: true %>
 </div>
 
 
  <div class="form-group">
   <label for="formGroupExampleInput3"><% f.label :img %></label>
  <%= f.text_field :img, class: "form-control", placeholder: "Image Url", autofocus: true   %>
  
  
 </div>
  
  

    <div class="btn btn-primary">
  <%= f.submit "Submit",  class: "btn btn-primary" %> 
</div>
    

<% end %>
<br><br>

<%= link_to "Back to articles listing", articles_path,  class: "btn btn-primary" %> 

